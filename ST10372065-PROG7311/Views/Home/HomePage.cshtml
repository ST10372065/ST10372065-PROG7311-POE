@{
    ViewData["Title"] = "Home Page";
    var showErrorModal = TempData["ErrorMessage"] != null;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Agri-Energy Connect</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <!-- Error Modal -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title" id="errorModalLabel">Access Denied</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    @errorMessage
                </div>
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-primary" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#loginModal">
                        Log In
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Dropdown Info Image (top right) -->
    <div class="dropdown-container">
        <img src="~/images/assets/sydney1.jpeg"
             alt="Information"
             class="info-image"
             data-bs-toggle="tooltip"
             data-bs-placement="left"
             title="Hover to see options" />

        <div class="dropdown-menu-custom">
            <a href="#" class="dropdown-item-custom">
                <img src="~/images/assets/addison1.jpg" alt="Option 1" />
                <span>Farming Guide</span>
            </a>
            <a href="#" class="dropdown-item-custom">
                <img src="~/images/assets/addison2.jpg" alt="Option 2" />
                <span>Energy Solutions</span>
            </a>
            <a href="#" class="dropdown-item-custom">
                <img src="~/images/assets/addison3.jpg" alt="Option 3" />
                <span>Community Hub</span>
            </a>
        </div>
    </div>

    <div class="main-content">
        <div class="hero-section">
            <h1>Welcome to Agri-Energy Connect</h1>
            <p>Collaborative platform for sustainable agriculture and renewable energy solutions</p>
        </div>

        <div class="feature-cards">
            <div class="card">
                <h3>Sustainable Farming Hub</h3>
                <p>Access best practices in organic farming, water conservation, and soil health through our interactive forums and resource center.</p>
            </div>

            <div class="card">
                <h3>Green Energy Marketplace</h3>
                <p>Discover solar-powered irrigation systems, wind turbines, and biogas solutions tailored for agricultural needs.</p>
            </div>

            <div class="card">
                <h3>Education & Training</h3>
                <p>Participate in online courses and workshops on integrating renewable energy technologies into farming practices.</p>
            </div>

            <div class="card">
                <h3>Project Collaboration</h3>
                <p>Connect with experts and access funding opportunities for joint sustainable agriculture initiatives.</p>
            </div>
        </div>

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Show the error modal if needed
        document.addEventListener("DOMContentLoaded", function () {
            var showErrorModal = @(showErrorModal.ToString().ToLower());
            if (showErrorModal) {
                var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                errorModal.show();
            }

            // Enable Bootstrap tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.forEach(function (tooltipTriggerEl) {
                new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        // Existing nav bar JS
        const navContainer = document.querySelector('.nav-container');
        const menuToggle = document.querySelector('.menu-toggle');
        const closeBtn = document.querySelector('.close-btn');

        if (menuToggle && navContainer) {
            menuToggle.addEventListener('click', () => {
                navContainer.classList.add('nav-active');
            });
        }

        if (closeBtn && navContainer) {
            closeBtn.addEventListener('click', () => {
                navContainer.classList.remove('nav-active');
            });
        }

        document.addEventListener('click', (e) => {
            if (navContainer && menuToggle &&
                !navContainer.contains(e.target) && !menuToggle.contains(e.target)) {
                navContainer.classList.remove('nav-active');
            }
        });
    </script>
</body>
</html>
